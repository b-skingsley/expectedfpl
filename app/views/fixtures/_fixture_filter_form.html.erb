<% fixure_gameweeks = Fixture.all.map { |fixture| fixture.gameweek } %>
<% gameweeks = fixture_gameweeks.uniq %>

<%= form_tag fixtures_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control form-control-sm mb-2",
    placeholder: "Filter by Team..."
  %>
  <%= select_tag :filter_by_gameweek, options_for_select(gameweeks),
    include_blank: 'Filter by gameweek...',
    class: "form-control form-control-sm mb-2"
  %>
  <%= submit_tag "Go", class: "btn btn-primary btn-sm" %>
<% end %>