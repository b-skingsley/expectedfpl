<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <% unless action_name == 'home' %>
      <%= link_to root_path do %>
        <%= image_tag "logo-nav.png", alt: 'expected fpl logo', id: 'nav-logo' %>
      <% end %>
    <% end %>
  </div>
  <div class="d-flex justify-content-between">

    <% gameweek_info = next_gameweek %>

    <div id="deadline">
      <div id="deadline-countdown" class="text-center pt-2 pr-2" data-gameweek="<%= gameweek_info[1] %>"></div>
      <div class="text-center pt-2 pr-2">UNTIL NEXT DEADLINE</div>
    </div>

    <% if user_signed_in? %>
      <div class="d-flex mr-4 align-items-center" id="logged-in">
        <%= link_to "#{current_user.email}", user_path(current_user) %>
      </div>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bars"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.teams.present? %>
                <%= link_to "Team", team_path(current_user.teams.first), class: "dropdown-item" %>
              <% else %>
                <%= link_to "Create Team", new_team_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Fixtures", fixtures_path(status: "current", search: { query: params.dig(:search, :query) }), class: "dropdown-item" %>
              <%= link_to "Player Stats", footballers_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-bars"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to 'Sign-up', new_user_registration_path, class: "nav-link" %>
              <%= link_to "Fixtures", fixtures_path, class: "dropdown-item" %>
              <%= link_to "Player Stats", footballers_path, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
